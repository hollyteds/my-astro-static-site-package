{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@renderers/*": [
        "src/renderers/*"
      ],
      "@images/*": [
        "src/images/*"
      ],
      "@scss/*": [
        "src/scss/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@links": [
        "src/links.ts"
      ],
      "@classList" : [
        "src/classList.ts"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
